<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="15"
        android:useLevel="false">

        <!--set the size of the shape-->
        <size
            android:width="45dip"
            android:height="45dip" />

        <!--set the color gradients
            of the shape-->
        <gradient
            android:angle="0"
            android:endColor="#EC008C"
            android:startColor="#F15B2A"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
/// Visit this site to get the colors https://webgradients.com/

</rotate>